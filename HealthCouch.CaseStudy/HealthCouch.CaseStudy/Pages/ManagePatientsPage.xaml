<Page x:Class="HealthCouch.CaseStudy.Pages.ManagePatientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthCouch.CaseStudy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagePatientsPage">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="5" Width="348">
                <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0, 0, 5, 0"></TextBlock>
                <TextBox Width="271" Name="NameTextBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Address:" VerticalAlignment="Center" Margin="0, 0, 5, 0" Width="84"></TextBlock>
                <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="72" Width="249" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Contact:" VerticalAlignment="Center" Margin="0, 0, 5, 0" Width="85"></TextBlock>
                <TextBox Width="253" Name="ContactTextBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Emergency Contact:" VerticalAlignment="Center" Margin="0, 0, 5, 0"></TextBlock>
                <TextBox Width="181" Name="EmergencyContactTextBox"></TextBox>
            </StackPanel>
        </StackPanel>


        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="5" Height="44" Width="332">
                <TextBlock Text="Gender:"></TextBlock>
                <StackPanel Orientation="Horizontal" >
                    <RadioButton Content="Male" GroupName="Gender" Height="28" ></RadioButton>
                    <RadioButton Content="Female" GroupName="Gender" Height="31" ></RadioButton>
                    <RadioButton Content="Other" GroupName="Gender" Height="28" Width="77"></RadioButton>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="34">
                <TextBlock Text="Blood Group:"></TextBlock>
                <ComboBox Width="213" Name="BloodGroupComboBox" Height="23"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="299" Height="43">
                <TextBlock Text="Age:" Width="59"/>
                <TextBox Width="215" x:Name="AgeTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="84" Width="369">
                <TextBlock Text="Symptoms:" Width="95" ></TextBlock>
                <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="72" Width="221" ></TextBox>
            </StackPanel>
        </StackPanel>

        <Grid Margin="10, 0" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                    Grid.Row="0" 
                    Grid.Column="0"
                    Margin="5">
                <TextBlock Text="Doctor ID:"
                       VerticalAlignment="Center"
                       Margin="0, 0, 5, 0">
                </TextBlock>
                <TextBox x:Name="SearchDoctorIdTextBox" 
                     Width="264">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    Grid.Row="0" 
                    Grid.Column="1"
                    Margin="5">
                <TextBlock Text="Doctor Name:"
                       VerticalAlignment="Center"
                       Margin="0, 0, 5, 0">
                </TextBlock>
                <TextBox x:Name="SearchDoctorNameTextBox" 
                     Width="246">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    Grid.Row="1" 
                    Grid.ColumnSpan="2"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Speciality:"
                       VerticalAlignment="Center"
                       Margin="0, 0, 5, 0">
                </TextBlock>
                <ComboBox x:Name="SearchSpecialityTextBox" 
                     Width="252">
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">
                <Button x:Name="SearchButton"
                        Content="Search">
                </Button>
                <Button x:Name="BackButton"
                        Content="Back">
                </Button>
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
